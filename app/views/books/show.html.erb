<div class="large-3 small-12 column">
  <%=image_tag @book.image%>
</div>

<div class="large-9 small-12 column">
  <h3>
    <%= @book.title %>
    (<%= @book.release_year %>)
    <%=link_to @book.indigo do%>
      <div class="indigo">
        <%=image_tag "indigo.png"%>
      </div>
    <%end%>
  </h3>
  <p class="label book-label radius mb1">$ <%= @book.strike_price %></p>

  <p><%= @book.title %></p>
</div>
