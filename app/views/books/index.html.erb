<h4 class="column">Featured Books</h4>
<div class="column">
  <ul class="books-grid no-bullet row">
    <% @books.each do |book| %>
      <li class="large-3 medium-4 small-12 column">
        <div class="book-card padly">
          <%= link_to book, class: "image" do %>
            <%= image_tag book.image %>
          <% end %>
          <div class="book-info ell glassy-bg padmy padlx">
            <div class="title">
              <h6><%= truncate(book.title, :length => 22, :omission => '...') %> <br>
                <span>(<%= book.release_year %>)</span></h6>
            </div>
            <p class="left price label book-label radius"><%= number_to_currency(book.strike_price, :unit => "$") %></p>
            <%= link_to book.indigo, class: "right" do %>
            <%= image_tag "indigo.png", :class => "indigo" %> 
           <% end %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>

