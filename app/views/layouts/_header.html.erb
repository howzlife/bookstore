
<div class="row">
  <nav class="top-bar column" data-topbar>

    <ul class="title-area">
      <li class="name">
        <h1>
          <a href="/">
            <i class="fi-play-video"></i> BookStore
          </a>
        </h1>
      </li>
      <li class="toggle-topbar"><a href="#"><span>Menu</span></a></li>
    </ul>

    <section class="top-bar-section">

      <!-- Right Nav Section -->
      <ul class="right">
        <%if signed_in?%>
          <li>
            <%= link_to cart_path do%>
              <i class="fi-shopping-cart"></i> My Cart (<span class="cart-count"><%=current_user.cart_count%></span>)
            <%end%>
          </li>
          <li><%=link_to current_user.email, edit_user_registration_path%></li>
          <li><%=link_to "Logout", destroy_user_session_path, method: :delete%></li>
        <%else%>
          <li><%=link_to "Register", new_user_registration_path%></li>
          <li><%=link_to "Login", new_user_session_path%></li>
        <%end%>
      </ul>

      <!-- Left Nav Section -->
      <ul class="left">
        <li class="has-form">
          <div class="row collapse">
            <%= form_tag books_path, :method => 'get' do %>
                <div class="large-8 small-9 columns">
                  <%= text_field_tag :search, (params[:search] != "") ? params[:search] : "Find Book", :class => "radius-ls expand" %>
                </div>
                <div class="large-4 small-3 columns">
                  <%= submit_tag "Search", class: "radius-rs button", name: nil %>
                </div>
            <% end %>
              <li class="has-dropdown">
                <a href="#">Categories</a>
                <ul class="dropdown">
                  <li><a href="/books/filter/romance" name="romance">Romance</a></li>
                  <li><a href="/books/filter/fiction" name="fiction">Fiction</a></li>
                  <li><a href="/books/filter/health" name="health">Health</a></li>
                  <li><a href="/books/filter/biography" name="biography">Biography</a></li>
                </ul>
              </li>
          </div>
        </li>
      </ul>

    </section>

  </nav>
</div>